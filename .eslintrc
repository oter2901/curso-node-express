{
    "root": true,
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "plugins": [
        "security",
        "prettier"
    ],
    "extends": [
        "airbnb",
        "plugin:import/warnings",
        "plugin:security/recommended",
        "plugin:prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "rules": {
        "class-methods-use-this": "off",
        "arrow-body-style": "off",
        "comma-dangle": "off"
    }
}